@page "/"
@model Chirp.Razor.Pages.PublicModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

<div>
    <h2> Public Timeline </h2>

    @* @if (User.Identity?.IsAuthenticated == true) *@
    @if (Model.IsUserAuthenticated())
    {
        <div class="cheepbox">
            <h3>What's on your mind, friend?</h3>
            <form method="post">
                @Html.AntiForgeryToken()
                <div class="form-group" style="display:flex;">

                    @Html.EditorFor(model => model.CheepText)

                    <input type="submit" value="Share">
                </div>

                @if (Model.ShouldShowValidation())
                {
                    <div class="form-group">

                        @Html.ValidationSummary()

                    </div>
                }
            </form>
        </div>
    }


    @if (Model.Cheeps != null && Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.Author.Id">@cheep.Author.Name</a>
                        </strong>
                        @cheep.Message
                        <small>&mdash; @cheep.Timestamp</small>
                    </p>
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>

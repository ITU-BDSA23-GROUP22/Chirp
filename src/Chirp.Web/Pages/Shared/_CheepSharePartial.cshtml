@model Chirp.Web.ViewModels.CheepShareViewModel

@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpContext
@{
    var pageNumber = httpContext.HttpContext?.Request.Query["page"].FirstOrDefault();
    var pageParam = pageNumber != null ? $"&page={pageNumber}" : string.Empty;
}
<div class="cheepbox">
    <h3>What's on your mind, friend?</h3>
    <form method="post">
        @Html.AntiForgeryToken()

        <div class="form-group" style="display:flex;">

            <input type="text" name="cheepText" />

            <input type="submit" value="Share" asp-page-handler="share">

        </div>

        <div class="form-group">

            @Html.ValidationSummary()

        </div>
    </form>
</div>
